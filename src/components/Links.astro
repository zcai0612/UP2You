---
import { Icon } from "astro-icon/components";
import type { Link } from "../types/types";

interface Props {
  links: Link[];
}

const { links } = Astro.props;
---

<div class="flex flex-row flex-wrap justify-center gap-4">
  {
    links.map((link) => (
      <a
        href={link.url}
        class="enhanced-link flex flex-row gap-3 items-center text-lg px-6 py-3 rounded-2xl font-semibold transition-all duration-300 hover:scale-105 hover:shadow-lg"
      >
        {link.icon && <Icon name={link.icon} class="text-2xl" />}
        <span>{link.name}</span>
      </a>
    ))
  }
</div>
